  <!-- Lesser Kanabō -->
  <ThingDef Name="HAJ_Kanabo" ParentName="BaseMeleeWeapon_Blunt">
    <defName>HAJ_Kanabo</defName>
    <label>Kanabō</label>
    <description>An extremely heavy two-handed war club that was used by samurai in feudal Japan. The Kanabō is typically made out of wood with metal spikes or stubs. The Kanabō's heavy mass and round stubs make it an excellent anti-armor weapon.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/Kanabo</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <costStuffCount>105</costStuffCount>
    <costList>
      <WoodLog>45</WoodLog>
    </costList>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>5</Mass>
    </statBases>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>CraftingSpot</li>
      </recipeUsers>
      <researchPrerequisite>HAJ_AdvancedWoodworking</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li>
        <label>tsukagashira (pommel)</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2.2</cooldownTime>
      </li>
      <li>
        <label>itadaki (top)</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>20</power>
        <cooldownTime>3</cooldownTime>
      </li>
      <li>
        <label>monouchi (shaft)</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>34</power>
        <cooldownTime>4</cooldownTime>
      </li>
    </tools>
  </ThingDef>

